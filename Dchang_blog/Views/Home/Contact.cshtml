@model Dchang_blog.Models.EmailModel

    


@{
    ViewBag.Title = "Contact";
}
<!-- breadcrumb start-->
    <div class="container">
        <div class="title" style="background-image: url('../../Images/textbg.jpg');">Daniel Chang's<BR />BLOG</div>
        <div class="subtitle">@ViewBag.Title</div>
    </div>
<!-- breadcrumb start-->




<section class="blog_area section_padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-2"></div>
            <div class="col-md-8">

                <div class="container mt-3 detposted">
                    <div class="blog_details row">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <h4>If you would like to message me, please fill out the from below:</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control",  id="comadd" })
                                    @Html.ValidationMessageFor(m => m.FromName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control",  id="comadd" })
                                    @Html.ValidationMessageFor(m => m.FromEmail)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control",  id="comadd" })
                                    @Html.ValidationMessageFor(m => m.Subject)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label"})
                                <div class="col-md-10">
                                    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows=5, cols=100,  id="comadd"})
                                    @Html.ValidationMessageFor(m => m.Body)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="send" />
                                </div>
                            </div>
                        }

                    </div>
                </div>



            </div>
            <div class="col-2"></div>
        </div>
    </div>
</section>






