                                <ul class="navbar-nav navbg">

                                    <li class="nav-item">
                                        <div class="nav-link">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</div>
                                    </li>
                                    <li class="nav-item">
                                        <div class="nav-link">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</div>
