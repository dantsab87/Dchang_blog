                                    </li>

                                    @* hide this link unless admin*@
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (User.IsInRole("Admin"))
                                        {
                                            <li class="nav-item">
                                                <div class="nav-link">@Html.ActionLink("Create Post", "Create", "BlogPosts", null, new { @class = "nav-link" })</div>
                                            </li>
                                            <li class="nav-item">
                                                <div class="nav-link">@Html.ActionLink("View All Posts", "Index", "BlogPosts", null, new { @class = "nav-link" })</div>
                                            </li>
                                        }

                                        <li class="nav-item">
                                            <div class="nav-link">@Html.ActionLink("Log Out", "CustomLogOff", "Account", null, new { @class = "nav-link" })</div>
                                        </li>
                                    }
                                    else
                                    {

                                        <li class="nav-item">
                                            <div class="nav-link">@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</div>
                                        </li>
                                        <li class="nav-item">
                                            <div class="nav-link">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</div>
                                        </li>
                                    }

                                </ul>
                            </div>
                            @*@Html.Partial("_LoginPartial")*@

                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
